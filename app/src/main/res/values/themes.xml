<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covidapp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/text</item>
    </style>

    <style name="ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="fontFamily">@font/title</item>
    </style>
</resources>